def T(r, de, B, E):
    if E >= B:
        L = E + B // 2
        if r[L] == de:
            return L + 1
        elif de < r[L]:
            return T(r, de, B, L - 1)
        else:
            return T(r, de, L + 1, E)
    else:
        return '-1'
r = [1, 2, 4, 5, 6, 7, 8]
R = 8
print('Found at ', T(r, R, 0, len(r) - 1))