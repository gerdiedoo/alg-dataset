package sorts;
import util.SortUtil;
public class BubbleSort {
    public static int[] sort(int[] arr) {
        while(!SortUtil.isSorted(arr)) {
            for(int i = 0; i < arr.length - 1; i++) {
                if(arr[i] > arr[i + 1]) {
                    SortUtil.swap(arr, i, i + 1);
                }
            }
        }
        return arr;
    }
}