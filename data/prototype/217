import java.util.Random;
public class CoinFlipper {
    private Random gen;
    private int numFlips;
    public CoinFlipper() {
        this(new Random());
    }
    public CoinFlipper(Random gen) {
        this.gen = gen;
    }
    public Coin flipCoin() {
        numFlips++;
        if (gen.nextBoolean()) {
            return Coin.HEADS;
        } else {
            return Coin.TAILS;
        }
    }
    public int getNumFlips() {
        return numFlips;
    }
    public static enum Coin {
        HEADS, TAILS
    }
}